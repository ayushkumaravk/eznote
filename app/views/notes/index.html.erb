
<div id="notesGallery">
    <% @notes.each do |note| %>
        <div class="noteCard">
            <%= link_to '/notes/'+note.id.to_s do%>
                <span class="clickBox "></span>
                <h2><%= truncate(note.title, length:35) %>
            <% end %>
            <h3><%= time_ago_in_words(note.created_at) %>&nbsp;ago</h3>
            <p><%= simple_format(truncate(note.content, length:325)) %></p>
        </div>
    <% end %>
</div>